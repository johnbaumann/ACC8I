{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "windows": {
                "command": "make",
                "options": {
                    "cwd": "${workspaceFolder}\\build\\ps1"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "windows": {
                "command": "make clean all",
                "options": {
                    "cwd": "${workspaceFolder}\\build\\ps1"
                },
                "args": []
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "windows": {
                "command": "make clean",
                "options": {
                    "cwd": "${workspaceFolder}\\build\\ps1"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Launch PCSX-Redux",
            "type": "shell",
            "windows": {
                "command": ".\\pcsx-redux.exe",
                "options": {
                    // Set this to the location of your pcsx-redux executable
                    "cwd": "C:/Users/John/source/repos/pcsx-redux/vsprojects/x64/Release/"
                },
                "args": ["-pcdrv -pcdrvbase \"${workspaceFolder\""]
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Run nops",
            "type": "shell",
            "windows": {
                "command": "nops /fast /exe .\\build\\ps1\\ACC8I.ps-exe /m",
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Set nops debug",
            "type": "shell",
            "windows": {
                "command": "nops /debug",
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
    ]
}