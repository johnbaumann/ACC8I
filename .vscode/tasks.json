{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build project",
			"command": "C:/MinGW/bin/g++.exe",
			"args": [
				"-g",
				"${workspaceFolder}\\*.c*",
				"-o",
				"${workspaceFolder}\\build\\main.exe",
				"-IC:/mingw/include",
				"-LC:/mingw/lib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"-mwindows"
			],
			"options": {
				"cwd": "C:/MinGW/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:/MinGW/bin/g++.exe"
		}
	]
}